<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">


    <ImageView
      android:id="@+id/img_back"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="centerCrop"
      android:src="@color/cardview_dark_background"
      android:visibility="visible"
      />


    <RelativeLayout
      android:id="@+id/chat_right_msg_layout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:background="@drawable/msg_out"
      android:orientation="vertical"
      android:visibility="visible"

      >

      <TextView
        style="@style/Base.TextAppearance.AppCompat.Widget.PopupMenu.Small"
        android:id="@+id/txt_msg_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="left|center_vertical"
        android:paddingTop="@dimen/dim_5"
        android:paddingBottom="@dimen/dim_5"
        android:paddingLeft="@dimen/dim_10"
        android:paddingRight="@dimen/dim_25"
        android:text="@string/msg_txt"
        android:textColor="@color/black"
        android:textSize="@dimen/dim_16"
        />

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txt_msg_from"
        android:layout_alignRight="@+id/txt_msg_from"
        android:layout_below="@+id/txt_msg_from"
        android:layout_gravity="bottom|right"
        android:paddingBottom="@dimen/dim_10"
        android:paddingRight="@dimen/dim_35"
        android:orientation="horizontal"
        >

        <TextView
          android:id="@+id/txt_time_from"
          style="@style/Base.TextAppearance.AppCompat.Widget.PopupMenu.Small"
          android:textStyle="italic"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="@dimen/dim_5"
          android:text="6:52 PM"
          android:textColor="@android:color/darker_gray"
          android:textSize="@dimen/dim_10"
          />

        <ImageView
          android:id="@+id/img_msg_status"
          android:layout_width="@dimen/dim_10"
          android:layout_height="@dimen/dim_10"
          android:src="@drawable/msg_delieverd"

          />


      </LinearLayout>



    </RelativeLayout>

</RelativeLayout>









