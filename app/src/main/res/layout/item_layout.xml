<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="@dimen/card_margin"
  android:layout_marginBottom="@dimen/card_margin"
  android:layout_marginLeft="@dimen/card_side_margin"
  android:layout_marginRight="@dimen/card_side_margin"
  app:cardBackgroundColor="@android:color/white"
  app:cardCornerRadius="0dp"
  app:cardElevation="@dimen/dim_2"
  app:cardPreventCornerOverlap="false">


  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dim_20"
    android:layout_marginBottom="@dimen/dim_20"
    android:layout_marginLeft="@dimen/dim_20">

    <ImageView
      android:id="@+id/img_user"
      android:layout_width="@dimen/dim_60"
      android:layout_height="@dimen/dim_60"
      android:layout_marginRight="@dimen/dim_20"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"

      />

    <TextView
      android:id="@+id/txt_user_name"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dim_10"
      android:layout_toRightOf="@+id/img_user"
      android:fontFamily="sans-serif-condensed"
      android:text=""
      android:textSize="@dimen/txt_size_18"
      />

    <TextView
      android:id="@+id/txt_seen_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dim_5"
      android:layout_below="@+id/txt_user_name"
      android:layout_toRightOf="@+id/img_user"
      android:text=""

      />


    <View
      android:id="@+id/view_line"
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:layout_marginTop="@dimen/dim_5"
      android:layout_below="@+id/txt_seen_time"
      android:layout_gravity="bottom"
      android:layout_toRightOf="@+id/img_user"
      android:background="#22424242"
      />

    <TextView
      android:id="@+id/txt_remaining"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dim_5"
      android:layout_below="@+id/view_line"
      android:text=""
      android:visibility="gone"
      />


  </RelativeLayout>


</android.support.v7.widget.CardView>